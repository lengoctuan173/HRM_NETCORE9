<div class="modal fade" id="callModal" tabindex="-1" role="dialog" aria-labelledby="callModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="callModalLabel">
                    <span class="call-status">Cuộc gọi</span>
                    <small id="callTimer" class="text-muted ms-2" style="display:none;">00:00</small>
                </h5>
                <button class="btn btn-close d-none" type="button" data-bs-dismiss="modal" aria-label="Close" id="closeCallButton"></button>
            </div>
            <div class="modal-body p-3">
                <!-- Thông báo lỗi -->
                <div id="callError" class="alert alert-danger" style="display:none;" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <span id="errorMessage"></span>
                </div>

                <!-- Trạng thái kết nối -->
                <div id="connectionStatus" class="alert alert-info" style="display:none;" role="alert">
                    <div class="d-flex align-items-center">
                        <div class="spinner-border spinner-border-sm me-2" role="status">
                            <span class="visually-hidden">Đang kết nối...</span>
                        </div>
                        <span id="statusMessage">Đang kết nối...</span>
                    </div>
                </div>

                <!-- Giao diện cuộc gọi -->
                <div id="call-interface" class="text-center" style="display:none;">
                    <div class="video-container d-flex justify-content-center gap-3 mb-3">
                        <div class="local-video-wrapper position-relative">
                            <video id="localVideo" autoplay muted playsinline class="rounded border border-primary"></video>
                            <span class="badge bg-primary position-absolute bottom-0 start-0 m-2">Bạn</span>
                            <div class="audio-indicator position-absolute top-0 end-0 m-2"></div>
                        </div>
                        <div class="remote-video-wrapper position-relative">
                            <video id="remoteVideo" autoplay playsinline class="rounded border border-danger"></video>
                            <span class="badge bg-danger position-absolute bottom-0 start-0 m-2" id="remoteUserName">Đối phương</span>
                            <div class="audio-indicator position-absolute top-0 end-0 m-2"></div>
                        </div>
                    </div>
                    <div class="call-controls">
                        <button class="btn btn-outline-secondary rounded-circle me-2" id="toggleMicButton">
                            <i class="fas fa-microphone"></i>
                        </button>
                        <button class="btn btn-danger" id="endCallButton">
                            <i class="fas fa-phone-slash"></i> Kết thúc
                        </button>
                        <button class="btn btn-outline-secondary rounded-circle ms-2" id="toggleSpeakerButton">
                            <i class="fas fa-volume-up"></i>
                        </button>
                    </div>
                </div>

                <!-- Giao diện khi có cuộc gọi đến -->
                <div id="incoming-call" class="text-center py-4" style="display:none;">
                    <div class="incoming-call-animation mb-4">
                        <i class="fas fa-phone-volume fa-4x text-primary"></i>
                    </div>
                    <h4 class="mb-3">📞 Cuộc gọi đến</h4>
                    <p id="callerName" class="lead mb-4">Người gọi...</p>
                    <div class="call-timer small text-muted mb-4">
                        Tự động từ chối sau <span id="timeoutCounter">30</span> giây
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <button class="btn btn-success btn-lg px-4" id="acceptCallButton">
                            <i class="fas fa-phone"></i> Chấp nhận
                        </button>
                        <button class="btn btn-danger btn-lg px-4" id="rejectCallButton">
                            <i class="fas fa-phone-slash"></i> Từ chối
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
