<div class="modal fade" id="callModal" tabindex="-1" role="dialog" aria-labelledby="callModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="callModalLabel">Cuộc gọi</h5>
                <button class="btn btn-close" type="button" data-bs-dismiss="modal" aria-label="Close" id="closeCallButton"></button>
            </div>
            <div class="modal-body p-3">
                <!-- Giao diện cuộc gọi -->
                <div id="call-interface" class="text-center" style="display:none;">
                    <div class="video-container d-flex justify-content-center">
                        <video id="localVideo" autoplay muted class="rounded border border-primary"></video>
                        <video id="remoteVideo" autoplay class="rounded border border-danger"></video>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-danger" id="endCallButton">
                            <i class="fas fa-phone-slash"></i> Kết thúc cuộc gọi
                        </button>
                    </div>
                </div>

                <!-- Giao diện khi có cuộc gọi đến -->
                <div id="incoming-call" class="text-center" style="display:none;">
                    <h4>📞 Cuộc gọi đến</h4>
                    <p id="callerName">Người gọi...</p>
                    <div>
                        <button class="btn btn-success me-2" id="acceptCallButton">
                            <i class="fas fa-phone"></i> Chấp nhận
                        </button>
                        <button class="btn btn-danger" id="rejectCallButton">
                            <i class="fas fa-phone-slash"></i> Từ chối
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
